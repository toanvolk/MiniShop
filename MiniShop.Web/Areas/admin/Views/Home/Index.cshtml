    <script src="~/lib/chameleon-admin/app-assets/vendors/js/charts/chartist.min.js" type="text/javascript"></script>
    <script src="~/lib/chameleon-admin/app-assets/vendors/js/charts/chartist-plugin-tooltip.min.js" type="text/javascript"></script>
    <script src="~/js/page/home.js"></script>
