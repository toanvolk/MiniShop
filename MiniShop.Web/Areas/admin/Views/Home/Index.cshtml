@{ Layout = "../Shared/_Layout.cshtml"; }
@section Styles{ 
    <link href="~/css/page/home.min.css" rel="stylesheet" />
}
<div class="content-wrapper-before"></div>
<div class="content-header row">
</div>
<div class="content-body mnshop-home">
    <!-- Revenue, Hit Rate & Deals -->
    <div class="row">
        <div class="col-md-12">
            <div class="card mnshop-product-review">                
                <div class="card-header" style="background: aliceblue; padding: 0 50px; margin: 5px;">
                    <div class="card-title float-left" style="padding-top: 0.6%; margin-right: 12px;">Thời gian </div>
                    <div class="blue-grey lighten-2 font-small-2 mb-0 float-left">
                        <div class='input-group'>
                            <input type='text' class="form-control shawCalRanges" style=" font-size: 0.9rem;" />
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <span class="ft-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <script>
                            $('.mnshop-product-review .shawCalRanges').daterangepicker({
                                startDate: moment().subtract('days', cdA.home.periodDayProductReviewDefault),
                                ranges: {
                                    'Today': [moment(), moment()],
                                    'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                                },
                                alwaysShowCalendars: true,
                                locale: {
                                    format: 'DD/MM/YYYY'
                                }
                            },
                                function (start, end) {
                                    console.log(start, end);
                                    helper.bridgeHandle.clickViewsLoad(start._d, end._d);
                                });
                        </script>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row match-height content-table-view">
        <div class="col-xl-8 col-lg-12">
            <h5 class="card-title text-bold-700 my-2">Lượt xem</h5>
           
            <div class="card" style="clear: both; margin-top: 10px;">
                <div class="card-content">
                    <div id="product-summary" class="media-list position-relative ">
                        <div class="table-responsive">
                            <table class="table table-padded table-xl mb-0" id="click-view-table">
                                <thead>
                                    <tr>
                                        <th class="border-top-0">Url</th>
                                        <th class="border-top-0">Số lần</th>
                                        <th class="border-top-0">Xem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <h5 class="card-title text-bold-700 my-2">Chi tiết lượt xem</h5>
            <div class="card">
                <div class="card-content">
                    <div id="product-summary" class="media-list position-relative">
                        <div class="table-responsive">
                            <table class="table table-padded table-xl mb-0" id="click-view-detail-table">
                                <thead>
                                    <tr>
                                        <th class="border-top-0">Time</th>
                                        <th class="border-top-0">IP</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ Products sell and New Orders -->
<!-- Total earning & Recent Sales  -->


