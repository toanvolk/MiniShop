@{ Layout = "../Shared/_Layout.cshtml"; }

@section Styles{
    <link href="~/lib/kendo-ui/styles/editor.css" rel="stylesheet" />
    <link href="~/css/page/blog.min.css" rel="stylesheet" />
}
<section id="mnshop-blog-add" class="mnshop-blog-modify">
    <div class="content-wrapper-before"></div>
    <div class="content-header row">
    </div>
    <div class="content-body">
        <!-- Revenue, Hit Rate & Deals -->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" id="horz-layout-colored-controls">Blog editing</h4>
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">
                            <div class="form form-horizontal">
                                <div class="form-body">
                                    <h4 class="form-section"><i class="la la-eye"></i> Blog info</h4>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput1">Tiêu đề</label>
                                                <div class="col-md-9">
                                                    <input type="text" id="userinput1" class="form-control border-primary" placeholder="Title" name="Title">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput2">Thể loại</label>
                                                <div class="col-md-9">
                                                    <input type="text" id="userinput2" class="form-control border-primary" placeholder="Category" name="Category">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">   
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput5">Ngày đăng</label>
                                                <div class="col-md-9">
                                                    <input class="form-control border-primary" placeholder="PublishDate" name="PublishDate">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput6">Hash tag</label>
                                                <div class="col-md-9">
                                                    <input class="form-control border-primary" placeholder="HashTag" name="HashTag">
                                                </div>
                                            </div>
                                        </div>  
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput4">Nguồn - tác giả</label>
                                                <div class="col-md-9">
                                                    <input type="text" id="userinput4" class="form-control border-primary" placeholder="Author" name="Author">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control">Ảnh minh họa</label>
                                                <div class="col-md-9">
                                                    <div class="input-group">
                                                        <input class="form-control border-primary" placeholder="PicturePath" name="PicturePath">
                                                        <div class="input-group-prepend">
                                                            <span class="btn btn-outline-primary input-group-text picture-path">Chọn</span>
                                                        </div>
                                                    </div>
                                                </div>                                                
                                            </div>
                                            
                                        </div>
                                    </div>
                                    <div  class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput3">Mô tả ngắn</label>
                                                <div class="col-md-9">
                                                    <textarea type="text" rows="3" id="userinput3" class="form-control border-primary" placeholder="DescriptionShort" name="DescriptionShort"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group row">
                                                <textarea id="content" rows="15" class="form-control border-primary" name="Content" placeholder="Content"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions right">
                                    <button class="btn btn-primary save">
                                        <i class="la la-check-square-o"></i> Save
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<environment include="Development">
    @section Scripts{
        <script src="~/js/page/blog.js"></script>
    }
</environment>
<environment include="Production">
    @section Scripts{
        <script src="~/js/page/blog.es5.min.js"></script>
    }
</environment>