@{ Layout = "../Shared/_Layout.cshtml"; }
@using MiniShop.App; 
@model  Tuple<ICollection<CategoryDto>>;
@section Styles{
    <link href="~/css/page/product.css" rel="stylesheet" />
    <link href="~/css/page/product-add.css" rel="stylesheet" />
    <link href="~/css/page/product-edit.css" rel="stylesheet" />
}
<section id="mnshop-product">
    <div class="content-wrapper-before"></div>
    <div class="content-header row">
    </div>
    <div class="content-body">
        <!-- Revenue, Hit Rate & Deals -->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Product</h4>
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li>
                                    <button type="button" class="btn btn-glow btn-round btn-bg-gradient-x-red-pink"
                                            onclick="productIndex.clickEvent(this)" data-ename="productConst.add">
                                        Add
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="form-group mshop-filter">
                        <label for="CattegoryId">Loại sản phâm</label>
                        <div class="mnshop-category-content">
                            @foreach (var item in @Model.Item1)
                            {
                                <a id="@item.Id" data-id="@item.Id" onclick="productIndex.clickEvent(this)" data-ename="productConst.categorySelected">@item.Name</a>
                            }
                        </div>
                        <input class="form-control" id="product-filter" placeholder="Tìm kiếm theo tên sản phẩm" onkeyup="productIndex.keyupEvent(this)" data-ename="productConst.productSearch"/>
                    </div>
                    <div class="card-content collapse show">
                        <div class="card-body p-0 pb-0">
                            <div class="grid">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{

    <script src="~/lib/chameleon-admin/app-assets/vendors/js/forms/extended/inputmask/jquery.inputmask.bundle.min.js"></script>
    <script src="~/lib/chameleon-admin/app-assets/js/scripts/forms/extended/form-inputmask.js"></script>
    <script src="~/js/page/product.js"></script>
    <script src="~/js/page/product-add.js"></script>
    <script src="~/js/page/product-edit.js"></script>
}