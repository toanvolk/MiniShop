@{ 
    Layout = null;
}
@using MiniShop.App;
@model ProductDto;
@{
    var img_url = "hanglink.info"+  @Model.Picture;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Sản phẩm - @Model.Name</title>
    <meta property="og:site_name" content="hanglink.info">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="vi_VN">
    <meta property="og:title" content="Sản phẩm - @Model.Name">
    <meta property="og:description" content="@Model.Description">
    <meta property="og:url" content="http://hanglink.info/san-pham/@Model.Code">
    <meta property="og:image" content="http://@img_url">
    <!-- my social -->
    <link href="~/css/client/mnshop.css" rel="stylesheet" />
    <link href="~/css/client/social-effect.css" rel="stylesheet" />
    <link href="~/css/client/button-pulse.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/solid.css" integrity="sha384-+0VIRx+yz1WBcCTXBkVQYIBVNEFH1eP6Zknm16roZCyeNg2maWEpk/l/KsyFKs7G" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/brands.css" integrity="sha384-1KLgFVb/gHrlDGLFPgMbeedi6tQBLcWvyNUN+YKXbD7ZFbjX6BLpMDf0PJ32XJfX" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/fontawesome.css" integrity="sha384-jLuaxTTBR42U2qJ/pm4JRouHkEDHkVqH0T1nyQXn1mZ7Snycpf6Rl25VBNthU4z0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/styles/github.min.css">
</head>
<body style="margin:0;">
    <div id="mnshop-product-view">
        <input name="ProductId" value="@Model.Id" hidden />
        <div class="social-content">
            <div class="social-background"></div>
            <div class="call-back product" style="position: absolute;">
                <div class="slider-text-inner button-pulse">
                    <div class="desc">
                        <p class="button" style="height: 34px; margin: 7px; background: #e81f28; opacity: 0.7; cursor: pointer;"><a href="/" target="_blank" class="btn-read-more pulse" style="color: white; text-decoration-line: none;">Xem thêm</a></p>
                    </div>
                </div>
            </div>
            <div class="social-items">

            </div>

        </div>
        <div class="mnshop-product-content">
            <iframe src="">
            </iframe>
        </div>

    </div>
    <!-- jQuery -->
    <script src="~/lib/shop-master/js/jquery.min.js"></script>
    <script src="~/js/app-helper.js"></script>
    <script src="~/js/client/jquery.c-share.js"></script>
    <script src="~/js/client/product-view.js"></script>
</body>
</html>