@{
    Layout = null;
}
@using MiniShop.App
@model ICollection<CategoryProductDto>;
<div id="fh5co-product" class="mshop-product-client">

    <div class="container">
        @foreach (var item in Model)
        {
            var productPart1 = @item.Products.Skip(0).Take(5).ToList();
            var productPart2 = @item.Products.Skip(5).Take(5).ToList();
            var productPart3 = @item.Products.Skip(10).Take(5).ToList();

            <div class="row category-product-v" data-ishow="0">
                <div class="category">
                    <div class="name">@item.Category.Name</div>
                    <a class="read-more" href="/san-pham/loai/@item.Category.Code">Xem thêm</a>
                </div>
                <div class="clearfix"></div>
                <div class="slideshow-container">
                    @if (productPart1.Count() > 0)
                    {
                        <div class="mySlides fade">
                            <ul class="product">
                                <partial name="../Product/_cardItem.cshtml" model="productPart1" />
                            </ul>
                        </div>
                    }
                    @if (productPart2.Count() > 0)
                    {
                        <div class="mySlides fade">
                            <ul class="product">
                                <partial name="../Product/_cardItem.cshtml" model="productPart2" />
                            </ul>
                        </div>
                    }
                    @if (productPart3.Count() > 0)
                    {
                        <div class="mySlides fade">
                            <ul class="product">
                                <partial name="../Product/_cardItem.cshtml" model="productPart3" />
                            </ul>
                        </div>
                    }
                    <div class="clearfix"></div>
                    <a class="prev">&#10094;</a>
                    <a class="next">&#10095;</a>
                </div>

                <br>
            </div>
        }
    </div>
</div>
